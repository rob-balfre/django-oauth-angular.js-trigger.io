					"description": "Specify icons to be used to represent the application", 
					"_docs": "http://docs.trigger.io/en/v1.4/modules/icons.html",
					"properties": {
						"android": {
							"required": false,
							"type": "object",
							"properties": {
								"36": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"48": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"72": {
									"required": true,
									"type": "string",
									"_filepicker": true
								}
							}
						},
						"chrome": {
							"required": false,
							"type": "object",
							"properties": {
								"16": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"48": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"128": {
									"required": true,
									"type": "string",
									"_filepicker": true
								}
							}
						},
						"firefox": {
							"required": false,
							"type": "object",
							"properties": {
								"32": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"64": {
									"required": true,
									"type": "string",
									"_filepicker": true
								}
							}
						},
						"ios": {
							"required": false,
							"type": "object",
							"properties": {
								"57": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"72": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"114": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"144": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"512": {
									"required": false,
									"type": "string",
									"_filepicker": true
								},
								"prerendered": {
									"required": false,
									"type": "boolean",
									"description": "If set then icons will not have a glossy effect applied by iOS."
								}
							}
						},
						"safari": {
							"required": false,
							"type": "object",
							"properties": {
								"32": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"48": {
									"required": true,
									"type": "string",
									"_filepicker": true
								},
								"64": {
									"required": true,
									"type": "string",
									"_filepicker": true
								}
							}
						}
					}
				},
				"is": {
					"required": false,
					"_docs": "http://docs.trigger.io/en/v1.4/modules/is.html",
					"description": "API methods to determine information about the platform currently running your app.",
					"type": "boolean"
				},
				"jquery": {
					"required": false,
					"type": "object",
					"_docs": "http://docs.trigger.io/en/v1.4/modules/jquery.html",
					"description": "Include a version of jQuery in your app.",
					"properties": {
						"version": {
							"required": true,
							"type": "string",
							"enum": ["1.4.3", "1.5.2", "1.6.4", "1.7.1"]
						}
					}
				},
				"launchimage": {
					"required": false, 
					"type": "object", 
					"description": "Images to display while your app is loading",
					"_docs": "http://docs.trigger.io/en/v1.4/modules/launchimage.html",
					"properties": {
						"iphone": {
							"required": false,
							"type": "string",
							"dependencies": ["iphone-retina", "ipad", "ipad-landscape", "ipad-retina", "ipad-landscape-retina", "iphone-retina4"],
							"_filepicker": true
						},
						"iphone-retina": {
							"required": false,
							"type": "string",
							"dependencies": ["iphone", "ipad", "ipad-landscape", "ipad-retina", "ipad-landscape-retina", "iphone-retina4"],
							"_filepicker": true
						},
						"iphone-retina4": {
							"required": false,
							"type": "string",
							"dependencies": ["iphone", "ipad", "ipad-landscape", "ipad-retina", "ipad-landscape-retina", "iphone-retina"],
